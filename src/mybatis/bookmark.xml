<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bookmark">
	<insert id="insertBookMark" parameterType="hashmap">
		insert into
		BOOKMARK (userid, boardid )
		values (#{userid},#{boardid})
	</insert>
	
	<select id="getBookMarkCount" parameterType="hashmap"
		resultType="int">
		select nvl(count(*),0) from BOOKMARK where boardid = #{boardid}
	</select>
	
	 <delete id="deleteBookMark" parameterType="hashmap">
		delete from
		BOOKMARK
		where userid = #{userid} and boardid = #{boardid}
	</delete>

</mapper>
